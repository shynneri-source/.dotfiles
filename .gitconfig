[user]
	email = 
	name = shynneri-source

[core]
	editor = vim
	autocrlf = input
	pager = less -FRX
	whitespace = trailing-space,space-before-tab
	excludesfile = ~/.gitignore_global

[init]
	defaultBranch = main

[credential]
	helper = store

[pull]
	rebase = true

[push]
	default = current
	autoSetupRemote = true

[fetch]
	prune = true

[rebase]
	autoStash = true
	autoSquash = true

[merge]
	conflictStyle = zdiff3
	tool = vimdiff

[diff]
	algorithm = histogram
	colorMoved = default

[log]
	date = relative

[status]
	showUntrackedFiles = all

[alias]
	# Quick shortcuts
	st = status -sb
	co = checkout
	br = branch
	ci = commit
	cm = commit -m
	ca = commit --amend
	can = commit --amend --no-edit
	
	# Log variations
	l = log --oneline --decorate --graph -20
	ll = log --oneline --decorate --graph
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	lga = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --all
	
	# Diff shortcuts
	d = diff
	ds = diff --staged
	dc = diff --cached
	
	# Stash shortcuts
	sl = stash list
	sp = stash pop
	ss = stash save
	
	# Undo shortcuts
	unstage = reset HEAD --
	uncommit = reset --soft HEAD^
	
	# Working with branches
	branches = branch -a
	remotes = remote -v
	tags = tag -l
	
	# Quick stats
	contributors = shortlog -sn
	recent = branch --sort=-committerdate --format='%(committerdate:relative)%09%(refname:short)'
	
	# Clean up
	cleanup = "!git branch --merged | grep -v '\\*\\|main\\|master\\|develop' | xargs -n 1 git branch -d"
	
	# Find commits by message
	find = "!git log --pretty=format:'%C(yellow)%h %Cblue%ad %Creset%s%Cgreen [%cn] %Cred%d' --decorate --date=short --grep"
	
	# Show what I did today
	today = log --since='1 day ago' --oneline --author=\"$(git config user.email)\"
	yesterday = log --since='2 days ago' --until='1 day ago' --oneline --author=\"$(git config user.email)\"

[color]
	ui = auto
	branch = auto
	diff = auto
	status = auto

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold

[color "status"]
	added = green
	changed = yellow
	untracked = red

[help]
	autocorrect = prompt
